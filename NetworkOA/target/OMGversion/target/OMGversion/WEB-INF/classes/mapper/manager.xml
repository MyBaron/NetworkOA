<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.Dao.managerDao">
    <select id="judgeAccAndPas" resultType="cn.Entity.managerJavaBean">
        select * from manager where manager_account=#{0} and manager_password=#{1}
    </select>


    <select id="judgeAccount" parameterType="String"  resultType="int">
        select count(manager_id) from manager where manager_account=#{account}
    </select>

    <insert id="putData" parameterType="cn.Entity.managerJavaBean">
        INSERT INTO manager(manager_name,manager_account,manager_password,manager_right) VALUES (#{manager_name},#{manager_account},#{manager_password},#{manager_right})
    </insert>

    <select id="selectAll" resultType="cn.Entity.managerJavaBean">
        SELECT * FROM  manager
    </select>

</mapper>