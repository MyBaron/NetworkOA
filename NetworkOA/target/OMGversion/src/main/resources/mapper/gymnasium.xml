<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.Dao.gymDao">
    <select id="selectGym" parameterType="String" resultType="cn.Entity.gymnasiumJavaBean" >
        select * from gym g,users us where g.gym_name=#{name} AND g.user_id=us.user_id
    </select>

    <select id="selectGymAll" resultType="cn.Entity.gymnasiumJavaBean">
        select * from gym g,users us where g.user_id=us.user_id order by gym_id DESC
    </select>

    <insert id="insertGym" parameterType="cn.Entity.gymnasiumJavaBean">
        INSERT into gym(user_id,gym_long_time,gym_begin_time,gym_name,gym_money) VALUES (#{user_id},#{gym_long_time},#{gym_begin_time},#{gym_name},#{gym_money})
    </insert>


    <select id="selectGymByuser_id" resultType="cn.Entity.gymnasiumJavaBean">
        select * from gym g,users us where g.user_id=us.user_id AND g.user_id=#{user_id}
    </select>

    <select id="selectByGym_id" resultType="cn.Entity.gymnasiumJavaBean">
        SELECT * from gym where gym_id=#{user_id}
    </select>
</mapper>