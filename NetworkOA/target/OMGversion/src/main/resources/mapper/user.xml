<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.Dao.UserDao">
    <select id="judgeAccAndPas"  resultType="cn.Entity.userJavaBean">
           select * from users where user_account=#{0} and user_password=#{1}
    </select>

    <select id="judgeAccount" parameterType="String"  resultType="int">
        select count(user_id) from users where user_account=#{account}
    </select>

    <select id="judgeName" parameterType="String" resultType="int">
        select count(user_id) from users where user_name=#{name}
    </select>

    <insert id="putData" parameterType="cn.Entity.userJavaBean">
        INSERT INTO users(user_name,user_account,user_password,user_phone) VALUES (#{user_name},#{user_account},#{user_password},#{user_phone})
    </insert>

    <select id="findAllVip" resultType="cn.Entity.userJavaBean">
        SELECT * FROM users WHERE user_vip>0
    </select>

    <select id="findByAccount" parameterType="String" resultType="cn.Entity.userJavaBean">
        SELECT  * FROM  users where user_account=#{user_name}
    </select>

    <update id="upData" >
        UPDATE users set user_experi=#{user_experi},user_integral=#{user_integral},user_vip=#{user_vip},user_money=#{user_money} where user_id=#{id}
    </update>

    <select id="findByuser_id" resultType="cn.Entity.userJavaBean">
        SELECT * from users where user_id=#{user_id}
    </select>

</mapper>